{
  "name": "armory",
  "version": "0.0.1",
  "private": true,
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "cross-env NODE_ENV=development node app.js",
    "gulp:dev": "cross-env NODE_ENV=development gulp",
    "test": "cross-env NODE_ENV=test mocha -r test/test_helper.js --recursive test",
    "test:chrome": "cross-env NODE_ENV=test mocha --inspect-brk test",
    "test:coverage": "nyc --reporter=lcov yarn test",
    "test:unit": "mocha test/middleware test/models test/routes",
    "test:integration": "mocha test/integration",
    "clean:client": "rimraf ./public/ && mkdirp ./public",
    "build:client": "cd armory-client && yarn install && yarn build && ncp build/ ../public",
    "copy:config": "ncp config/config_sample.js config/config.js",
    "heroku-postbuild": "yarn clean:client && yarn copy:config && yarn build:client"
  },
  "dependencies": {
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cookie-parser": "^1.3.3",
    "ejs": "^2.3.1",
    "express": "^4.13.3",
    "express-session": "^1.15.3",
    "glob": "^6.0.4",
    "method-override": "^2.3.0",
    "morgan": "^1.6.1",
    "mysql": "^2.8.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport.socketio": "^3.7.0",
    "sequelize": "^3.5.1",
    "serve-favicon": "^2.3.0",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "uuid": "^3.0.1",
    "websocket": "^1.0.24",
    "ws": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-arrays": "^1.0.0",
    "chai-deep-match": "^1.0.2",
    "cross-env": "^5.0.1",
    "debug": "^2.2.0",
    "gulp": "^3.9.0",
    "gulp-livereload": "^3.8.0",
    "gulp-nodemon": "^2.0.2",
    "gulp-plumber": "^1.0.0",
    "gulp-sass": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.2",
    "mock-socket": "^6.1.0",
    "ncp": "^2.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.6.1",
    "supertest": "^2.0.0"
  },
  "engines": {
    "node": ">= 8.1.0"
  },
  "license": "MIT"
}
